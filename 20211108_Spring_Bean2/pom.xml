<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<!-- modelVersion : maven의 버전 -->
	<modelVersion>4.0.0</modelVersion>

	<!-- groupId : 그룹에 대한 표기 -->
	<groupId>com.min.edu</groupId>
	<!-- artifactId : 프로잭트 명/ 배포이름과 관련 -->
	<artifactId>20211108_Spring_Bean2</artifactId>
	<!-- maven build를 통해서 생성된 배포 파일 -->
	<version>0.0.1-SNAPSHOT</version>
	<!-- 배포 퍄카장 형태 -->
	<packaging>jar</packaging>

	<name>20211108_Spring_Bean2</name>
	<url>http://maven.apache.org</url>
	<!-- pom.xml에서 사용하는 변수 -->
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<!-- 프로잭트에서 사용하는 maven을 통해서 연결하여 저장되는 라이브러리 -->
	<dependencies>

		<!-- Spring Framework에 관련된 기본 기능을 가지고 있음 -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
			<version>5.0.7.RELEASE</version>
		</dependency>

		<!-- Spring Framework에 사용되는 Annotation에 관련된 생성/사용 -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>5.0.7.RELEASE</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<!-- maven을 통해서 빌드하면 되면 오류 발생 -->
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<source>11</source>
					<target>11</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
